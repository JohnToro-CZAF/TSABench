{
    "model_config": {
        "model_type": "GPT",
        "args" : {
            "dim_input": 300,
            "dim_model": 256,
            "num_layers": 1,
            "num_heads": 8,
            "dim_ff": 256,
            "dim_output": 2,
            "embedding_strategy": "word2vec",
            "pretrained_path": "word2vec-google-news-300",
            "embedding_frozen": false,
            "oov_handing": "using_unk"
        }
    },
    "tokenizer_config": {
        "tokenizer_type": "nltk",
        "args": {
            "dataset": "yelp_review_full"
        }
    },
    "trainer_args": {
        "task": "classification",
        "training_batch_size": 256,
        "validation_batch_size": 256,
        "learning_rate": 0.0001,
        "epoch": 30
    }, 
    "metric_config": {
        "metrics": [
            {"name": "accuracy", "args": {}},
            {"name": "f1", "args": {"num_classes": 5}},
            {"name": "precision", "args": {"num_classes": 5}},
            {"name": "recall", "args": {"num_classes": 5}}
        ]
    },
    "data_config": {
        "name": "yelp_review_full",
        "is_huggingface": true,
        "type": "classification"
    },
    "analysis_config": {
        "output_dir": "experiments/gpt/yelp_review_full",
        "record_metrics": true,
        "record_gradients": true,
        "save_interval": 1000
    }
}